
@{
    ViewBag.Title = "viewhotel";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

@using tourTravels.Models;
<section class="photo-gallery" style="padding:3%">
    <h1 class="text-center mb-0">View Places</h1>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 gallery-grid">

            @{
                DBManager db = new DBManager();
                string cmd = "select * from tbl_hotel";
                System.Data.DataTable dt = db.getallrecord(cmd);
                if (dt.Rows.Count > 0)
                {
                    for (int i = 0; i < dt.Rows.Count; i++)
                    {
                        <div class="col text-center card">

                            <img src="~/content/image/@dt.Rows[i]["file"]" class="img-fluid" alt="Image" style="height:300px;width:100%">
                            <h1 class="card-subtitle text-uppercase">@dt.Rows[i]["city"]</h1>
                            <h1 class="card-subtitle text-capitalize"> @dt.Rows[i]["hotel"]</h1>
                            <h6>Rent:@dt.Rows[i]["rent"]  <i style="color:green">@dt.Rows[i]["hoteladdress"]</i></h6>
                            <center>    <a class="btn btn-outline-secondary" href="/admin/dhotel?del=@dt.Rows[i]["id"]" style="text-decoration:none">Delete</a></center><br />
                        </div>


                    }
                }
            }







        </div>
        <div class="row" style="margin-top:2%">
            <center> <a href="/admin/Addhotel" class="btn btn-outline-secondary">Add Place</a></center>
        </div>
    </div>
</section>




