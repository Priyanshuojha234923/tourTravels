
@{
    ViewBag.Title = "cpassword";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
<script>
    function on_submit() {
        document.myform.submit();
        document.myform.reset();
    }
</script>
<section style="background-color:aliceblue">
    <div class="container" style="padding:5%">

        <div class="row mb-5">
            <div class="col-lg-5 mx-auto" style=" border-radius: 5%">

                <div class=" p-5 rounded shadow " style="border:3px solid #D50000;box-shadow:#d50000 10px 10px inset ">
                    <h2 class="card-title text-center">Add Place</h2>
                    <center>
                        <form method="post" action="/Admin/cpassword" name="myform">



                            <label class="form-label col-form-label-sm" style="text-align:start" name="txtname">@ViewBag.msg</label><br />

                            <label class="form-label col-form-label-sm" style="text-align:start" name="txtname">Enter Old Password</label>
                            <input type="Password" class="card form-control " name="opass" required/>
                            <label class="form-label col-form-label-sm" style="text-align:start" name="txtname">Enter New Password</label>
                            <input type="Password" class="card form-control " name="npass"required />
                            <label class="form-label col-form-label-sm" style="text-align:start" name="txtname">Confirm New Password</label>
                            <input type="Password" class="card form-control " name="cnpass" required />


                            <br><br />
                            <input type="button" value="Update Now" class="btn btn-outline-secondary" style="color:black" onclick="on_submit()">


                        </form>
                    </center>

                </div>
            </div>
        </div>


    </div>
</section>

