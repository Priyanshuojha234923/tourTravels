
@{
    ViewBag.Title = "feedbackview";
    Layout = "~/Views/Shared/GeneralMaster.cshtml";
}
<style>
    .bi-star-fill{
        color:gold
    }
</style>
<div class="block-61 space-between-blocks m-4">
    <div class="container">
        <div class="block__header col-lg-8 col-xl-7 mx-auto text-center px-0">

            <span style="font-size:45px">What They Say About Us</span>
            <center> <hr style="width:65%;height:5px;background-color:bisque" /></center>
        </div>
        <div class="row px-2 pt-4">
            @{
                tourTravels.Models.DBManager db = new tourTravels.Models.DBManager();
                string cmd = "select * from feedback";
                System.Data.DataTable dt = db.getallrecord(cmd);
                if (dt.Rows.Count > 0)
                {
                    for (int i = 0; i < dt.Rows.Count; i++)
                    {
                        <div class="col-lg-6 pb-5">
                            <div class="testimonial-card-1 card body p-3">
                                <p class="testimonial-card-1__paragraph">@dt.Rows[i]["feedback"]</p>
                                <div class="block-61-person">

                                    <div class="px-2"></div>
                                    <div class="flex-grow-1 d-flex flex-column">
                                        <span class="block-61-person__rating">
                                            @if (int.Parse(dt.Rows[i]["rateing"].ToString()) == 1)
                                            {
                                                <i class="bi bi-star-fill"></i><i class="bi bi-star"></i><i class="bi bi-star"></i><i class="bi bi-star"></i><i class="bi bi-star"></i>
                                            }
                                            @if (int.Parse(dt.Rows[i]["rateing"].ToString()) == 2)
                                            {
                                                <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star"></i><i class="bi bi-star"></i><i class="bi bi-star"></i>
                                            }
                                            @if (int.Parse(dt.Rows[i]["rateing"].ToString()) == 3)
                                            {
                                                <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star"></i><i class="bi bi-star"></i>
                                            }
                                            @if (int.Parse(dt.Rows[i]["rateing"].ToString()) == 4)
                                            {
                                                <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star"></i>
                                            }
                                            @if (int.Parse(dt.Rows[i]["rateing"].ToString()) == 5)
                                            {
                                                <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
                                            }







                                        </span><span class="block-61-person__name my-1">@dt.Rows[i]["Name"]</span><span style="font-size:10px">Date: @dt.Rows[i]["date"]</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }








        </div>
    </div>
</div>
