    <section class="pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <center><span class="text-capitalize" style=" font-family: 'Caveat', cursive; text-shadow: 0px 0px 2px rgba(0, 2, 0, 1);font-size:45px">top places </span></center>
                </div>
               
                <div class="col-12">
                    <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">

                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="row">
                                    @{
                                        DBManager db = new DBManager();
                                        string cmd = "select * from tbl_place";
                                        System.Data.DataTable dt = db.getallrecord(cmd);
                                        if (dt.Rows.Count > 0)
                                        {
                                            for (int i = 0; i < dt.Rows.Count; i++)
                                            {
                                                <div class="col-md-4 mb-3">
                                                    <div class="card">
                                                        <img class="img-fluid" alt="100%x280" src="~/content/image/@dt.Rows[i]["file"]">
                                                        <div class="card-body">
                                                            <h4 class="card-title">@dt.Rows[i]["place"]</h4>
                                                            <p class="card-text">@dt.Rows[i]["description"]</p>

                                                        </div>

                                                    </div>
                                                </div>



                                                
                                            }
                                        }
                                    }




                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="row">

                             
                               
                            

                                </div>
                            </div>
                          
                        </div>
                    </div>
