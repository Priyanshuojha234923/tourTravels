    <!--Item One -->
    <!-- Button trigger modal -->
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">

            <form class="form-group" method="post" action="/home/booking">
                <div class="modal-content">
                    <div class="modal-header" style="background-color:blueviolet">
                        <h1 class="modal-title fs-5 text-center" id="exampleModalLabel">LOGIN HERE</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <table class="table table-responsive">
                            <tr>
                                <td>Name</td>
                                <td><input type="text" class="form-control" id="txtname" name="Txtname" /></td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td><input type="text" class="form-control" id="txtemail" name="Txtemail" /></td>
                            </tr>
                            <tr>
                                <td>Mobile</td>
                                <td><input type="text" class="form-control" id="txtmobile" name="Txtmobile" /></td>
                            </tr>
                            <tr>
                                <td>Destination</td>
                                <td><input type="text" class="form-control" id="desti" name="Desti" readonly /></td>
                            </tr>
                            <tr>
                                <td>Current Location</td>
                                <td><input type="text" class="form-control" id="clocation" name="Clocation" /></td>
                            </tr>
                        </table>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary" style="background-color:blueviolet" id="book" value="submit">
                    </div>
                </div>
            </form>
        </div>
    </div>
