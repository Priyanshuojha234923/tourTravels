                </div>
            </div>
            <div class="row">
                @{
                    DBManager db = new DBManager();
                    string cmd = "select * from tbl_place";
                    System.Data.DataTable dt = db.getallrecord(cmd);
                    if (dt.Rows.Count > 0)
                    {
                        for (int i = 0; i < dt.Rows.Count; i++)
                        {
                            <div class="col-lg-4 mb-3 d-flex align-items-stretch">
                                <div class="card">
                                    <img src="~/content/image/@dt.Rows[i]["file"]" class="card-img-top" alt="Card Image">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">@dt.Rows[i]["place"]</h5>
                                        <p class="card-text mb-4">@dt.Rows[i]["description"]</p>
                                        <a href="#" class="btn btn-primary mt-auto align-self-start">Book now</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }


            </div>
        </div>
    </section>


