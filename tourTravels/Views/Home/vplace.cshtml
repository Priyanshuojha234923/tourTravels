
@{
    ViewBag.Title = "vplace";
    Layout = "~/Views/Shared/GeneralMaster.cshtml";
}
<link href="~/Content/css/index.css" rel="stylesheet" />

@{
    string id = ViewBag.pid;
    tourTravels.Models.DBManager db = new tourTravels.Models.DBManager();
    string cmd = "select * from tbl_place where pid='" + id + "'";
    System.Data.DataTable dt = db.getallrecord(cmd);
    if (dt.Rows.Count > 0)
    {
        <section>
            <div class="container" style="margin-bottom:5%">
                <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active" data-bs-interval="10000">
                            <img src="~/Content/image/@dt.Rows[0]["file"]" class="d-block w-100" alt="..." style="max-height: 600px; opacity: 0.7">
                            <div class="carousel-caption ">
                                <span>@dt.Rows[0]["place"]</span>
                                
                                <br />
                                <br />
                                <a class="btn btn-outline-dark" href="/home/login">Book Now</a>
                            </div>
                        </div>


                    </div>


                </div>
                <div class="row">
                    <span class="text-center" style="font-size:60px">@dt.Rows[0]["place"]</span>
                    <hr style="height:5px;background-color:antiquewhite" />
                    <span style="font-size:25px">@dt.Rows[0]["description"]</span>
                    <br />
                   <br />
                </div>
                <div class="Row"><center><br />   <a class="btn btn-outline-dark" href="/home/login" >Book Now</a></center></div>
            </div>
        </section>
       
    }
}




