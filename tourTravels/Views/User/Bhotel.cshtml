
@{
    ViewBag.Title = "Bhotel";
    Layout = "~/Views/Shared/UserMaster.cshtml";
}

<style>
    body {
        font-family: "Poppins", sans-serif
    }
</style>
<link href="css/font-awesome.min.css" rel="stylesheet">
<link href="css/bootstrap.min.css" rel="stylesheet">
<script src="~/Scripts/jquery-3.7.1.slim.min.js"></script>
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script>
    function on_submit() {
        document.myform.submit();
        document.myform.reset();
    }
</script>

@{
//string id = Session["uid"].ToString();

    <body>
        <section id="holl">
            <div class="container" style="padding:5%">

                <div class="row mb-5">
                    <div class="col-lg-5 mx-auto" style=" border-radius: 5%">

                        <div class=" p-3 rounded shadow " style="border:3px solid #D50000;box-shadow:#d50000 10px 10px inset ">
                            <h2 class="card-title text-center">Book Hotel Here</h2>
                            <center>
                                <form method="post" action="/user/Bhotel" name="myform">



                                    <label class="form-label col-form-label-sm" style="text-align:start" >@ViewBag.msg</label><br />


                                    <input type="hidden" class="card form-control " name="txtname" value="@ViewBag.name" />

                                    <input type="hidden" class="card form-control " name="txtemail" value="@ViewBag.email" />
                                    <input type="hidden" class="card form-control " name="txtmobile" value="@ViewBag.mobile" />

                                    <label class="form-label col-form-label-sm" style="text-align:start" >City</label>
                                    <input type="text" class="card form-control " name="txtcity" value="@ViewBag.city" readonly required />
                                    <label class="form-label col-form-label-sm" style="text-align:start" name="txtname">Hotel Name</label>
                                    <input type="text" class="card form-control " name="txthotel" value="@ViewBag.hotel" readonly required  />
                                    <label class="form-label col-form-label-sm" style="text-align:start" name="txtname">Number of Person</label>
                                    <input type="text" class="card form-control " name="nop" required />
                                    <label class="form-label col-form-label-sm" style="text-align:start" name="txtname">Check-in Date</label>
                                    <input type="date" class=" form-control " name="txtcdate" required/>
                                    <label class="form-label col-form-label-sm" style="text-align:start" name="txtname">Check-Out Date</label>
                                    <input type="date" class=" form-control " name="txtodate" required />



                                    <br><br />
                                    <input type="button" value="Book Now" class="btn btn-outline-secondary" style="color:black" onclick="on_submit()">


                                </form>
                            </center>

                        </div>
                    </div>
                </div>


            </div>
        </section>

    </body>
}

