
@{
    ViewBag.Title = "vhotel";
    Layout = "~/Views/Shared/UserMaster.cshtml";
}
<div class="card-group">



    @{



        tourTravels.Models.DBManager DB = new tourTravels.Models.DBManager();
        string cmd = "select * from tbl_hotel";
        System.Data.DataTable dt = DB.getallrecord(cmd);
        if (dt.Rows.Count > 0)
        {
            for (int i = 0; i < dt.Rows.Count; i++)
            {
        <div class="card" >
            <img src="~/Content/image/@dt.Rows[i]["file"]" class="card-img-top"
                 alt="Hollywood Sign on The Hill" style="max-height:300px" />
            <img src="" />
            <div class="card-body">
                <h5 class="card-title">@dt.Rows[i]["city"]</h5>
                <p class="card-text">
                    @dt.Rows[i]["hotel"]
                </p>
                <a href="/user/Bhotel?book=@dt.Rows[i]["id"]" class="btn btn-outline-secondary">Book Now</a>
              

            </div>
        </div>

            }
        }
    }

</div>

